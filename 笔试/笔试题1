#define _CRT_SECURE_NO_WARNINGS 1
#include <stdio.h>
#include <stdlib.h>
#include <string>
#include <assert.h>

int main()
{
	char a = -128;
	//10000000000000000000000010000000
	//11111111111111111111111101111111
	//11111111111111111111111110000000--补码
	//10000000
	
	//整型提升，按照符号位提升
	//11111111111111111111111110000000--补码==源码
	
	printf("%u\n", a);  //u打印十进制的无符号数字
	return 0;
}
