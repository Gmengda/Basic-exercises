#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
#include<string.h>
#include<windows.h>
int main() 
{
	int i=0;
	char a[20] = { 0 };                       //给输入字符串提供空间
	for(i=0;i<3;i++)                          //限定输入密码的次数
	{
		printf("请输入密码：");
		scanf("%s",a);
		if (strcmp(a, "810833") == 0)     //比较函数，比较规定字符串和输入字符串的一致性
		{
			printf("登陆成功.\n");
		}
		else
		{
			printf("登陆失败.\n");
		}
	}
	if (i == 3)
	{
		printf("登录失败！\n");
	}
	return 0;
}
