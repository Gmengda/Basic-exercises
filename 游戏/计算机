#define _CRT_SECURE_NO_WARNINGS 1
#include <stdio.h>

void mune()
{
	printf("*****************************\n");
	printf("***   1. 加       2. 减   ***\n");
	printf("***   3. 乘       4. 除   ***\n"); 
	printf("***         0. 退出       ***\n");
	printf("*****************************\n");
}

int add(int x, int y)
{
	return x + y;
}

int sub(int x, int y)
{
	return x - y;
}

int mul(int x, int y)
{
	return x * y;
}

int div(int x, int y)
{
	return x / y;
}

int main()
{
	int a, b, c;
	int (*uuu[5])(int, int) = { add,sub,mul,div };
	do
	{
		mune();
		printf("请输入要选择的类型");
		scanf("%d", &a);
		if (a == 0)
			break;
		if (a >= 1 && a <= 4)
		{
			printf("请输入两个数");
			scanf("%d%d", &b, &c);
			printf("%d\n", uuu[a - 1](b, c));
		}
		else
			printf("请重新输入！");
	} while (1);
	return 0;
}
