#define _CRT_SECURE_NO_WARNINGS 1
#include <stdio.h>

void mune()
{
	printf("*****************************");
	printf("***   1. 加       2. 减   ***");
	printf("***   3. 乘       4. 除   ***"); 
	printf("***         0. 退出       ***");
	printf("*****************************");
}

int add(int x, int y)
{
	return x + y;
}

int sub(int x, int y)
{
	return x - y;
}

int mul(int x, int y)
{
	return x * y;
}

int div(int x, int y)
{
	return x / y;
}

